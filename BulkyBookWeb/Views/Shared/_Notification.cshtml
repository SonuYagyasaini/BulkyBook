@using System.Text.Json

@if (TempData["Success"] != null)
{
    <script type="text/javascript">
        (function () {
            toastr.options = {
                "closeButton": true,
                "debug": false,
                "newestOnTop": true,
                "progressBar": true,
                "positionClass": "toast-top-right",
                "preventDuplicates": false,
                "showDuration": "300",
                "hideDuration": "1000",
                "timeOut": "5000",
                "extendedTimeOut": "1000",
                "showEasing": "swing",
                "hideEasing": "linear",
                "showMethod": "fadeIn",
                "hideMethod": "fadeOut"
            };

            var message = @Html.Raw(JsonSerializer.Serialize(TempData["Success"]?.ToString()));
            toastr.success(message);
        })();
    </script>
}

